{
	"compilerOptions": {
		"target": "esnext",
		"useDefineForClassFields": true,
		"module": "esnext",
		"allowJs": true,
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"skipLibCheck": true,
		"resolveJsonModule": false,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"lib": [
			"esnext",
			"dom"
		],
		"baseUrl": "./",
		"noEmit": true
	},
	"include": [
		"resources/js/**/*.ts",
		"resources/js/**/*.d.ts",
		"resources/js/**/*.tsx",
	]
}
